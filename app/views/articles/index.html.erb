 <h1 class="center">Listing all articles</h1>
<p>
	<%= link_to 'Home', root_path %>
	<%= link_to 'Create new article', new_article_path %>
</p>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td style="padding-right:10px;"><%= article.title %></td>
			<td><%= article.description %></td>
			<td style="padding-right:10px; padding-left:10px;"><small>Created by:<%= article.user.username %>, <%= time_ago_in_words(article.created_at) %> ago, last updated: <%= time_ago_in_words(article.updated_at) %> ago</small></td>
			<td style="padding-right:5px;"><%= link_to 'Edit', edit_article_path(article) %></td>
			<td style="padding-right:5px;"><%= link_to 'Show', article_path(article) %></td>
			<td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
		</tr>
	<% end %>
</table>

<% if @articles.empty? %>
	<p style="font-size: 25px;">List is empty</p>
<% end %>